{
	"type": "object",
	"properties": {
		"GENERAL": {
			"type": "object",
			"properties": {
				"HTTP_PORT": { "$ref": "#/$defs/sport" },
				"SECRET_KEY": { "type": "string" },
				"ADMIN_USERNAME": { "type": "string" },
				"ADMIN_PASSWORD": { "type": "string" },
				"DB_AUTOBKP_NUM_KEEP": { "type": "integer",
											"minimum": 0},
				"SECONDARIES": {},
				"SECONDARY_TIMEOUT": { "type": "integer" },
				"SLAVES": {},
				"SLAVE_TIMEOUT": { "type": "integer" }
			}
		},
		"HARDWARE": {
			"type": "object",
			"properties": {
				"I2C_BUSES": {
					"description": "Array of I2C bus IDs to search for nodes.",
					"type": "array",
					"items": {
						"type": "integer"
					}
				}
			}
		},
		"LOGGING": {
			"type": "object",
			"properties": {
				"CONFIG_FILE": {
					"type": "string",
					"description": "Python logging config file to apply."
				}
			}
		},
		"LED": {
			"type": "object"
		},
		"MQTT": {
			"type": "object",
			"properties": {
				"BROKER": {
					"description": "MQTT broker hostname or IP address.",
					"type": "string"
				},
				"PORT": {
					"description": "MQTT broker port.",
					"$ref": "#/$defs/sport"
				},
				"CLIENT_ID": {
					"description": "MQTT client ID.",
					"type": "string"
				},
				"USERNAME": {
					"description": "MQTT username.",
					"type": "string"
				},
				"PASSWORD": {
					"description": "MQTT password.",
					"type": "string"
				},
				"CLIENT_CERT": {
					"description": "Path to client certificate PEM file.",
					"type": "string"
				},
				"PRIVATE_KEY": {
					"description": "Path to private key PEM file.",
					"type": "string"
				},
				"TOPIC": {
					"description": "Parent topic to publish under.",
					"type": "string"
				}
			}
		},
		"AUDIO": {
			"type": "object",
			"properties": {
				"PLAYER": {
					"type": "array",
					"items": {
						"type": "string"
					}
				},
				"TTS": {
					"type": "array",
					"items": {
						"type": "string"
					}
				}
			}
		},
		"VRX_CONTROL": {
			"type": "object"
		},
		"LAPRF": {
			"type": "object",
			"properties": {
				"ADDRESS": { "type": "string" }
			}
		},
		"CHORUS": {
			"type": "object",
			"properties": {
				"HARDWARE_PORT": { "$ref": "#/$defs/cport" },
				"API_PORT": { "$ref": "#/$defs/cport" }
			}
		},
		"SENSORS": {
			"type": "object"
		},
		"SERIAL_PORTS": {
			"description": "Array of serial ports to search for nodes.",
			"type": "array",
			"items": {
			"$ref": "#/$defs/cport"
			}
		},
		"SOCKET_PORTS": {
			"description": "Array of socket ports to listen for nodes.",
			"type": "array",
			"items": {
			"$ref": "#/$defs/sport"
			}
		}
	},

	"$defs": {
		"sport": {
			"title": "socket port",
			"type": "integer",
			"minimum": 1,
			"maximum": 65535
		},
		"cport": {
			"title": "com port",
			"type": "string"
		}
	}
}